{
  "bracketSpacing": true,
  "bracketSameLine": false,
  "singleQuote": true,
  "semi": true,
  "trailingComma": "all",
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "printWidth": 80,
  "tabWidth": 2,
  "overrides": [
    {
      "files": ["*.json", "*.yml", "*.css", "*.scss"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
